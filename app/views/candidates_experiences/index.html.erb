<main class="vh-100 vw-100 d-flex flex-column">
    <div style="background-color: #142C34">
        <div class="container-lg">
            <div class="my-4 d-flex justify-content-between">
                <%= image_tag "itcrowd_logo", style: "width: 150px; height: 20px;" %>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                    <label class="form-check-label text-white fw-light" for="flexSwitchCheckChecked">Email Notifications</label>
                </div>
            </div>
            <div class="my-4 py-4 d-grid gap-2">
                <h2 class="text-center text-white fw-normal m">Welcome, <%= @jobs_candidate.candidate.first_name %></h2>
                <div class="d-flex flex-column flex-lg-row align-items-center justify-content-center">
                    <p class="h5 text-white fw-normal mb-0">You applied to <span class="text-primary"><%= @jobs_candidate.job.title %></span></p>
                    <button type="button" class="btn btn-outline-primary mt-3 ms-0 mt-lg-0 ms-lg-3">About the Role</button>
                </div>
            </div>
            <div style="height: 100px;"></div>
        </div>
    </div>
    <div class="flex-grow-1" style="background-color: #E0E6E6;">
        <div class="container-lg h-100">
            <div class="shadow bg-body rounded-3 d-flex flex-column flex-md-row" style="margin-top: -6rem; height: 115%;">
                <div class="col-12 col-md-9 p-3 flex-grow-1">Steps</div>
                <div class="col-12 col-md-3 p-3 rounded-3 d-flex flex-column justify-content-center" style="background-color: #E0E6E6;">
                    <div class="d-flex flex-column align-items-center">
                        <%= image_tag @jobs_candidate.job.recruiter.profile_picture_url, class: "rounded-circle mb-3 mb-md-5", height: '150', width: '150' %>
                        <p class="fw-normal mb-0">Normal weight text.</p>
                        <p class="fw-light mb-0">Light weight text.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>